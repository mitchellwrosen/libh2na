cabal-version: 2.4

name: libh2na
version: 0

library
  build-depends:
    base,
    bytestring,
    cryptonite,
    foldl,
    memory,
    pedersen-commitment,
    transformers

  default-extensions:
    ScopedTypeVariables
    StrictData
    TypeApplications

  exposed-modules:
    H2NA.Commitment
    H2NA.Hash
    H2NA.PublicKey
    H2NA.Salt
    H2NA.SecretBox
    H2NA.SecretKey

  ghc-options:
    -Wall

  hs-source-dirs:
    src

  other-modules:
    H2NA.Internal
